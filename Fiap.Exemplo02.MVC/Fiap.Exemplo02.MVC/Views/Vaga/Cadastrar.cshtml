@model Fiap.Exemplo02.MVC.Models.Vaga

@{
    ViewBag.Title = "Vaga";
}

 @Helper.Mensagem(ViewBag.msg,"sucesso")


<h2>Cadastrar</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(v => v.Cargo)
        @Html.TextBoxFor(v => v.Cargo, new { @class = "form-control", placeholder = "Entre com o cargo" })
    </div>
    <div class="form-group">
        @Html.LabelFor(v => v.Descricao)
        @Html.TextAreaFor(v => v.Descricao, new { @class = "form-control", placeholder = "Entre com a descrição" })
    </div>
    <div class="form-group">
        @Html.LabelFor(v => v.Salario)
        @Html.TextBoxFor(v => v.Salario, new { @class = "form-control", placeholder = "Entre com o Salario" })
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(v => v.ValeRefeicao)
        @Html.LabelFor(v => v.ValeRefeicao)
    </div>
    <div class="form-group">
        @Html.LabelFor(v => v.Nivel)
        @Html.DropDownListFor(v=> v.Nivel, (SelectList)ViewBag.opcoes, "Selecione..." ,new {@class="form-control"})
    </div>
    <div class="form-group">
        @Helper.Submit("Cadastrar")
    </div>
}
